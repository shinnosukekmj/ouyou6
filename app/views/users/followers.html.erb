<h1>Follower Users</h1>
    <%if @users.empty?%>
        <p>ユーザーはいません</p>
    <%else%>
          <table class="table">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
                <th colspan="4"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                      <%=link_to user_path(user) do%>
                      <%=image_tag user.get_profile_image("50x50")%>
                      <%end%>
                  </td>
                  <td>
                    <%= link_to user_path(user) do %>
                      <%= user.name %>
                    <% end %>
                  </td>
                  <td>フォロー数<%=link_to user.followings.count,followings_user_path(user)%></td>
                  <td>フォロワー数<%=link_to user.followers.count,followers_user_path(user)%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
    <%end%>